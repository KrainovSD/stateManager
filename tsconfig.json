{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "umd",
    "lib": ["ESNext", "dom"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./types"],
    "types": ["node"],
    "importHelpers": true
  }
}
